<UserControl x:Class="TumleTjek.View.ChildrenListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TumleTjek.View"
             xmlns:sys="clr-namespace:System;assembly=mscorlib" 
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" 
             Height="600"
             Width="1000">

    <Grid Background="#efded4">


        <Image Margin="36,10,768,410" Source="/Image/LogoTumleTjek.png" Stretch="Uniform"/>


        <TextBlock HorizontalAlignment="Center" Margin="0,57,0,0"
                   TextWrapping="Wrap" FontSize="32"
                   FontWeight="Bold" Foreground="#3B3B3B"
                   VerticalAlignment="Top">
            <Run Text="Find dit barn."/>
        </TextBlock>


        <TextBlock HorizontalAlignment="Left" Margin="820,107,0,0"
                   TextWrapping="Wrap" VerticalAlignment="Top"
                   FontSize="16" FontWeight="SemiBold"
                   Foreground="#5C5C5C">
            <Run Text="Dagens Aktiviteter"/>
        </TextBlock>


        <Border Width="318" Height="36"
                Background="White"
                BorderBrush="#D0D0D0"
                BorderThickness="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Top" Margin="0,117,0,0">
            <Grid>
                <TextBox Background="Transparent"
                         BorderThickness="0"
                         VerticalContentAlignment="Center"
                         Padding="10,0,0,0"
                         FontSize="16"
                         Foreground="#333"/>
                <TextBlock Text="🔍 Søg"
                           FontSize="16"
                           Foreground="#999"
                           
                           Margin="0,5,10,5"
                        IsHitTestVisible="False"/>
            </Grid>
        </Border>



        <ListBox Height="400" Width="400" ItemsSource="{Binding ChildVM}" SelectedItem="{Binding SelectedChild, Mode=TwoWay}"
                 BorderBrush="#E0E0E0"
                    BorderThickness="2"
                    Background="White"
                    Padding="10" Margin="300,162,300,38">

            <i:Interaction.Triggers>
                <i:EventTrigger EventName="MouseDoubleClick">
                    <i:InvokeCommandAction Command="{Binding ChildDoubleClickCommand}"/>
                </i:EventTrigger>
            </i:Interaction.Triggers>


            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Margin="0 5" Padding="10"
                            Background="#FFF9F6"
                            BorderBrush="#DDD"
                            BorderThickness="1"
                            Width="340"
                            >
                        <StackPanel Orientation="Vertical">
                            <TextBlock Text="{Binding Name}"
                                       FontSize="20"
                                       FontWeight="SemiBold"
                                       Foreground="#333"/>
                            <TextBlock Text="{Binding Parents.Name}"
                                       FontSize="14"
                                       FontWeight="Light"
                                       Foreground="#666"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>



        <Button Content="← Gå Tilbage"
                HorizontalAlignment="Left"
                Margin="820,505,0,0"
                VerticalAlignment="Top"
                Height="41" Width="133"
                Background="#9F6E4E"
                Foreground="White"
                FontWeight="Bold"
                BorderBrush="Transparent"
                Command="{Binding GoBackCommand}" />


        <Border Width="160"
                Height="200"
                BorderBrush="#CCC"
                BorderThickness="2"
                Background="White"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="807,140,0,0"
                Padding="10">
            <TextBox 
                Background="Transparent"
                BorderThickness="0"
                TextWrapping="Wrap" 
                Text="Bla bla bla" 
                FontSize="14"
                Foreground="#333"
                VerticalScrollBarVisibility="Auto" />
        </Border>

    </Grid>
</UserControl>
 
    
    
