<UserControl x:Class="TumleTjek.View.ChildrenListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TumleTjek.View"
             xmlns:sys="clr-namespace:System;assembly=mscorlib" 
             mc:Ignorable="d" 
             Height="600"
             Width="1000">

    <Grid Background="#efded4">


        <Image Margin="36,10,768,410" Source="/Image/LogoTumleTjek.png" Stretch="Uniform"/>


        <TextBlock HorizontalAlignment="Left" Margin="344,52,0,0"
                   TextWrapping="Wrap" FontSize="32"
                   FontWeight="Bold" Foreground="#3B3B3B"
                   VerticalAlignment="Top">
            <Run Text="Find dit barn."/>
        </TextBlock>


        <TextBlock HorizontalAlignment="Left" Margin="820,107,0,0"
                   TextWrapping="Wrap" VerticalAlignment="Top"
                   FontSize="16" FontWeight="SemiBold"
                   Foreground="#5C5C5C">
            <Run Text="Dagens Aktiviteter"/>
        </TextBlock>


        <Border Width="220" Height="36"
                Margin="335,100,0,0"
                Background="White"
                BorderBrush="#D0D0D0"
                BorderThickness="1"
                HorizontalAlignment="Left"
                VerticalAlignment="Top">
            <Grid>
                <TextBox Background="Transparent"
                         BorderThickness="0"
                         VerticalContentAlignment="Center"
                         Padding="10,0,0,0"
                         FontSize="16"
                         Foreground="#333"/>
                <TextBlock Text="🔍 Søg"
                           FontSize="16"
                           Foreground="#999"
                           VerticalAlignment="Center"
                           Margin="10,0,0,0"
                           IsHitTestVisible="False"/>
            </Grid>
        </Border>


        <ListBox ItemsSource="{Binding ChildVM}" Margin="296,142,406,111"
                 BorderBrush="#E0E0E0"
                 BorderThickness="2"
                 Background="White"
                 Padding="10">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Margin="0 5" Padding="10"
                            Background="#FFF9F6"
                            BorderBrush="#DDD"
                            BorderThickness="1">
                        <StackPanel Orientation="Vertical">
                            <TextBlock Text="{Binding Name}"
                                       FontSize="20"
                                       FontWeight="SemiBold"
                                       Foreground="#333"/>
                            <TextBlock Text="{Binding Parents.Name}"
                                       FontSize="14"
                                       FontWeight="Light"
                                       Foreground="#666"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>


        <Button Content="← Gå Tilbage"
                HorizontalAlignment="Left"
                Margin="820,504,0,0"
                VerticalAlignment="Top"
                Height="41" Width="133"
                Background="#9F6E4E"
                Foreground="White"
                FontWeight="Bold"
                BorderBrush="Transparent"
                Command="{Binding GoBackCommand}" />


        <Border Width="160"
                Height="200"
                BorderBrush="#CCC"
                BorderThickness="2"
                Background="White"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="807,140,0,0"
                Padding="10">
            <TextBox 
                Background="Transparent"
                BorderThickness="0"
                TextWrapping="Wrap" 
                Text="Bla bla bla" 
                FontSize="14"
                Foreground="#333"
                VerticalScrollBarVisibility="Auto" />
        </Border>
        <Button Width="150" Height="40" Background="#9F6E4E" Foreground="White" FontSize="16" Padding="10,5" 
        HorizontalAlignment="Left" VerticalAlignment="Top"
        BorderThickness="0" Margin="370,505,0,0" >
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Vælg Barn" Margin="0,0,5,0" VerticalAlignment="Center"/>
                <TextBlock Text="🐾" FontSize="18" VerticalAlignment="Center"/>
            </StackPanel>
        </Button>

    </Grid>
</UserControl>
