<Page x:Class="TumleTjek.View.FravaerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TumleTjek.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="FravaerPage">


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="201*"/>
            <ColumnDefinition Width="599*"/>
        </Grid.ColumnDefinitions>
        <Rectangle Fill="#efded4" Grid.ColumnSpan="2" />
        <TextBlock Text="Status på fravær" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" FontSize="24" FontWeight="Bold" Height="32" Width="184" Grid.Column="1"/>
        
        <Button x:Name="Tilbage" Content="Tilbage" HorizontalAlignment="Center" Margin="0,383,0,0" VerticalAlignment="Top" Height="44" Width="156" Background="#9f6e4e" Foreground="White">

        </Button>
        <ListView d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,92,10,126">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>



    </Grid>
</Page>
